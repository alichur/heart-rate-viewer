{
  "name": "minimalReact",
  "version": "0.0.1",
  "description": "write the most basic hello world I could make with React",
  "dependencies": {
    "express": "^4.4.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "enzyme": "^2.7.1",
    "jsdom": "^9.11.0",
    "livereactload": "^3.0.1",
    "mocha": "^3.2.0",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-proxy": "^1.1.8",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "semistandard": "^9.1.0",
    "sinon": "^1.17.7",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "watch": "watchify -t [ babelify --presets [ react ] ] -p [ livereactload --port 4475 ] src/main.jsx -o public/build/bundle.js -v",
    "build": "browserify -t [ babelify --presets [ react ] ] src/main.jsx -o public/build/bundle.js",
    "debug": "browserify --debug -t [ babelify --presets [ react ] ] src/main.jsx -o public/build/bundle.js",
    "test": "mocha --compilers js:babel-register --require test/helpers.js --require test/dom.js --recursive"
  }
}
