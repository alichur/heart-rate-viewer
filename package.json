{
  "name": "minimalReact",
  "version": "0.0.1",
  "description": "write the most basic hello world I could make with React",
  "dependencies": {
    "express": "^4.4.5",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "livereactload": "^3.0.1",
    "react-proxy": "^1.1.8",
    "semistandard": "^9.1.0",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "watch": "watchify -t [ babelify --presets [ react ] ] -p livereactload public/src/main.jsx -o public/build/bundle.js -v",
    "build": "browserify -t [ babelify --presets [ react ] ] public/src/main.jsx -o public/build/bundle.js"
  }
}
